<%- model_class = Sector -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @sector.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @sector.description %></dd>
</dl>

<h3>Lugares gerenciados por esse setor</h3>

<%= render "places/places_table", places: @sector.places %>

<h3>Objetos gerenciados por esse setor</h3>

<%= render "object_resources/object_resources_table", object_resources: @sector.object_resources %>

<h3>Usu√°rios gerenciados por esse setor</h3>

<%= render "users/users_table", users: @sector.users %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sectors_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sector_path(@sector), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sector_path(@sector),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
