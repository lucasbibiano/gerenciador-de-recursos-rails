<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:begin) %>:</strong></dt>
  <dd><%= @reservation.begin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
  <dd><%= @reservation.end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @reservation.status %></dd>
</dl>

<% if @reservation.place %>
  <h3>Sala reservada</h3>

  <%= render "places/places_table", places: [@reservation.place] %>
<% end %>

<h3>Objetos reservados</h3>

<%= render "object_resources/object_resources_table", object_resources: @reservation.object_resources %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
