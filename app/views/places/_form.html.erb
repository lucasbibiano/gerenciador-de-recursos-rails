<%= simple_form_for @place, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :code %>
  <%= f.input :capacity %>
  <%= f.input :width %>
  <%= f.input :length %>

  <%= f.association :sector %>
  <%= f.association :room_type %>

  <%= f.association :services, as: :check_boxes %>

  <%= f.input :description %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                places_path, :class => 'btn' %>
  </div>
<% end %>
