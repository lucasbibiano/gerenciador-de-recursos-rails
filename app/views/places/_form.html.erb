<%= simple_form_for(@place) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :code %>
    <%= f.input :capacity %>
    <%= f.input :width %>
    <%= f.input :length %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
